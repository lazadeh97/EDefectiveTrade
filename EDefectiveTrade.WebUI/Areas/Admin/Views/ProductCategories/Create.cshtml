@model EDefectiveTrade.Business.DTOs.ProductCategory.ProductCategoryDTO
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="layout-px-spacing">

    <div class="row layout-top-spacing">

        <form asp-action="Create"  class="mt-3 my-5">

            <div class="row">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="col-6">
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-6">
                    <div class="form-group">
                        <label asp-for="Description" class="control-label"></label>
                        <input asp-for="Description" class="form-control" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>



            </div>
            <div class="row">

                <div class="col-md-6 control-label">
                    @Html.ActionLink("Listə Geri Dön", "Index", "ProductCategories", null, new { @class = "btn btn-primary btn-lg btn-block" })

                </div>
                <div class="col-md-6 control-label">
                    <input id="frmProductCat" type="submit" value="Yarat" class="btn btn-primary btn-lg btn-block" tabindex="16" />

                </div>

            </div>

        </form>

    </div>
</div>
