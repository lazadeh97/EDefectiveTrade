@model EDefectiveTrade.Business.DTOs.Authentication.LoginDto
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link rel="shortcut icon" href="~/assets/css-dep/img/logo.ico">
    <link rel="stylesheet" href="~/assets/css/plugins.min.css">
    <link rel="stylesheet" href="~/assets/css/styles.css">

</head>
<body>
    <form asp-controller="Login" asp-action="SignIn" method="post" class="mt-3 my-5">
        <section class="auth-wrapper">
            <div class="container">
                <a class="btn btn-back" asp-controller="Home" asp-action="Index">
                    <img src="~/assets/img/left.svg" alt="left" />
                    Geri
                </a>
                <img class="logo m-auto" src="~/assets/img/logo-1.svg" alt="logo" />
                <div class="form-wrapper m-auto">
                    <h2 class="t-center">Kabinetə giriş</h2>
                    <div class="form-group">
                        <label asp-for="Email" class="control-label"></label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password" class="control-label"></label>
                        <input asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 control-label">
                        <input id="frmProduct" type="submit" value="Daxil ol" class="btn btn-primary btn-lg btn-block" tabindex="16" />
                    </div>
                </div>
                <a href="#" class="t-center link">Qeydiyyatdan keç</a>
            </div>
            <partial name="_Footer" />

        </section>
    </form>
    <script src="~/assets/js/plugins.min.js"></script>
    <script src="~/assets/js/scripts.js"></script>
</body>
</html>

